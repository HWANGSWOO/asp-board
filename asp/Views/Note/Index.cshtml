@model IEnumerable<asp.Models.Note>

@{
    ViewData["Title"] = "Index";
}

<h1>게시판</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NoteTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoteContents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NoteTitle)
            </td>
            <td>
                <a asp-controller="Note" asp-action="Details" asp-route-id="@item.NoteNo">@item.NoteContents</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NoteNo">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.NoteNo">Delete</a>
             
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn-warning" asp-controller="Note" asp-action="Create">게시물 작성</a>