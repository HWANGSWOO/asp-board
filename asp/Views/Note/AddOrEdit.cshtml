            <div class="form-group">
                <label asp-for="NoteContents" class="control-label editor" ></label>
                <textarea class="form-control editor"  rows="20"  asp-for="NoteContents" placeholder ="내용 입력"></textarea>
                    <span asp-validation-for="NoteContents" class="text-danger"></span>
            </div>



